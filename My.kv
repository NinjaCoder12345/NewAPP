<MyLayout>
	BoxLayout:
		orientation:"vertical"
		size: root.width, root.height

		Label:
			id: calc_input
			text : "0"
			halign:"right"
			font_size:65
			size_hint:(1, .15)
		GridLayout:
			cols:4
			rows:5

			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "%"
				on_press:root.addNumber("%")
			Button:
				id:clear
				size_hint:(.2, .2)
				font_size : 32
				text : "C"
				on_press : root.clear()
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "<<"
				on_press : root.correct()
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "/"
				on_press:root.addNumber("/")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "7"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("7")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "8"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("8")

			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "9"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("9")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "*"
				on_press:root.addNumber("*")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "4"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("4")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "5"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("5")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "6"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("6")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "-"
				on_press:root.addNumber("-")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "1"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("1")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "2"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("2")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "3"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("3")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "+"
				on_press:root.addNumber("+")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "+/-"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.signChanger()
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "0"
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber("0")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "."
				background_color : (157/255, 157/255, 157/255)
				on_press:root.addNumber(".")
			Button:
				size_hint:(.2, .2)
				font_size : 32
				text : "="
				on_press:root.equalToButton()
